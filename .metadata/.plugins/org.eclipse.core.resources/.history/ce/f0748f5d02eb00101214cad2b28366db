package ui;

import javax.swing.*;
import java.awt.*;
import manager.EquipmentManager;
import manager.RentalManager;



public class MainFrame extends JFrame {
	private EquipmentManager equipmentManager = new EquipmentManager();
	private RentalManager rentalManager = new RentalManager();

    private static final long serialVersionUID = 1L;

    public MainFrame() {
        setTitle("University Sports Gear Rental Manager");
        setSize(600, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JLabel title = new JLabel("University Sports Gear Rental Manager", JLabel.CENTER);
        title.setFont(new Font("Arial", Font.BOLD, 18));

        JButton btnEquipment = new JButton("Manage Equipment");
        JButton btnRent = new JButton("Rent Equipment");

        // EVENT HANDLING
        btnEquipment.addActionListener(e -> {
            new ManageEquipmentFrame(equipmentManager).setVisible(true);
        });

        btnRent.addActionListener(e -> {
            new RentEquipmentFrame(equipmentManager, rentalManager).setVisible(true);
        });


        JPanel panel = new JPanel();
        panel.add(btnEquipment);
        panel.add(btnRent);

        add(title, BorderLayout.NORTH);
        add(panel, BorderLayout.CENTER);
    }
}
