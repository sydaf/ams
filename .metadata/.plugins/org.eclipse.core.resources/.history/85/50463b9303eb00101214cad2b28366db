package manager;

import model.Equipment;

/*
 * RentalManager class
 * Responsible for rental operations
 * Demonstrates SEPARATION OF CONCERNS
 */
public class RentalManager {

    public boolean rentEquipment(Equipment e, int qty) {
        if (e.getAvailableQty() >= qty) {
            e.rent(qty);
            return true;
        }
        return false;
    }

    public void returnEquipment(Equipment e, int qty) {
        e.returnItem(qty);
    }
}
